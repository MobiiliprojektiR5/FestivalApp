<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/festivalImage"
        android:layout_width="334dp"
        android:layout_height="238dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@+id/festivalName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img"/>

    <TextView
        android:id="@+id/festivalName"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginTop="340dp"
        android:text="Nimi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#B40486"
        android:textSize="10pt"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/festivalDate"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginTop="370dp"
        android:text="Ajankohta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="7pt"
        />

    <TextView
        android:id="@+id/festivalTown"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginTop="390dp"
        android:text="Kaupunki"
        android:textColor="@color/white"
        android:textSize="7pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/festivalInfo"
        android:layout_width="346dp"
        android:layout_height="180dp"
        android:layout_marginTop="33dp"
        android:text="Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/festivalName"
        android:textColor="@color/white"
        android:textSize="7pt"
        />

    <Button
        android:id="@+id/buttonLink"
        android:layout_width="163dp"
        android:layout_height="61dp"
        android:text="Osta lippuja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#B40486"
        app:layout_constraintTop_toBottomOf="@+id/festivalInfo" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="163dp"
        android:layout_height="61dp"
        android:text="Takaisin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#1C1C1C"
        app:layout_constraintTop_toBottomOf="@+id/festivalInfo"
        />
</androidx.constraintlayout.widget.ConstraintLayout>